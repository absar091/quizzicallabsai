{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**/__/auth/action**",
        "destination": "/auth-action.html"
      },
      {
        "source": "/__/auth/action",
        "destination": "/auth-action.html"
      }
    ]
  },
  "database": {
    "rules": "firebase-rules-fix.json"
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}