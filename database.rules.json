
{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "quizResults": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid",
        ".indexOn": ["date"]
      }
    },
    "bookmarks": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "fcmTokens": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    }
    ,
    "sharedQuizzes": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "shared_quizzes": {
      ".indexOn": ["shareCode"],
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "quiz_likes": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "questionBank": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
    ,
    "question_bank": {
      ".indexOn": ["topic", "userId"],
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}
